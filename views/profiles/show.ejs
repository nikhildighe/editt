<% layout('layouts/boilerplate')%>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=profile.what_describes_you%>
                    </h5>
                    <p class="card-text">
                        <%=profile.in_business_since%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= profile.categories %>
                    </li>
                <li class="list-group-item text-muted">
                    <%= profile.description %>
                </li>
                    <li class="list-group-item">$<%= profile.website %>/@</li>
                </ul>
                <div class="card-body">
                    <a class="btn btn-info" href="/profiles/<%= profile._id %>/edit"> Edit </a>
                </div>
                <div class="card-footer text-muted">
                    2 days ago
                </div>
         
            </div>
        </div>