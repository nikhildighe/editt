<% layout('layouts/boilerplate')%>
    <h1>
        All Profiles
    </h1>
 

    <% for (let profile of profiles){%>
        
        <div class="card" mb-3">

            <div class="row">
            
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%-profile.what_describes_you%>
                        </h5>
                        <p class="card-text">
                            <%-profile.in_business_since%>
                        </p>
                        <p class="card-text">
                            <%-profile.categories%>
                        </p>
                        <p class="card-text">
                            <%-profile.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%-profile.website%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/profiles/<%-profile.id%>">View<%-profile.what_describes_you%></a>
                        <a class="btn btn-info" href="/profiles/<%= profile._id %>/edit"> Edit </a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>